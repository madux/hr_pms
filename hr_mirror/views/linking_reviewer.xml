<?xml version="1.0" encoding="utf-8"?>
    <odoo>
        <record id="view_hr_competency_reviewer_filter" model="ir.ui.view">
			<field name="name">hr.competency.reviewer</field>
			<field name="model">hr.competency.reviewer</field>
			<field name="arch" type="xml">
				<search string="Search reviewer">
                    <field name="employee_id"/> 
                    <field name="staff_id"/> 
				</search>
			</field>
		</record>
		<record id="view_hr_competency_reviewer_form" model="ir.ui.view">
			<field name="name">Link reviewer form</field>
			<field name="model">hr.competency.reviewer</field>
			<field name="arch" type="xml">
				<form string="HR Competency Reviewers" create="1">
                    <header> 
                         
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="employee_id" default_focus="1" required="1"/>
                            </h1>
                        </div> 
                        <group>
                            <group>
                                <field name="staff_id" invisible="0" readonly="1" force_save="1"/> 
                            </group>
                            <group>
                                <field name="department_id" readonly="0" force_save="1" string="Department"/>   
                                <field name="active" invisible="0" readonly="0" force_save="1"/> 
                            </group>
                        </group>
                        <notebook>
                            <page name="category_role_ids" string="Roles &amp; Employees to link">
                                <field name="category_role_ids" readonly="0" string="Employees">
                                    <tree string="" editable="bottom">
                                        <field name="category_role_id" readonly="0" force_save="1" string="Category"/>
                                        <field name="employee_ids" widget="many2many_tags"/>
                                    </tree>
                                </field>
                            </page> 
                        </notebook>
                    </sheet>
                </form>
			</field>
		</record>

		<record id="view_hr_competency_reviewer_tree" model="ir.ui.view">
			<field name="name">Competency reviewer form</field>
			<field name="model">hr.competency.reviewer</field>
			<field name="arch" type="xml">
				<tree string="Competency" create="1">
                    <field name="employee_id" readonly="1" force_save="1" string="Name"/> 
                    <field name="staff_id" readonly="0" string="Staff No:"/>  
                    <field name="department_id" readonly="0" force_save="1" string="Department"/>   
                </tree>
			</field>
		</record>

		<record id="action_hr_competency_reviewer_id" model="ir.actions.act_window">
			<field name="name">Competency Reviewer</field>
			<field name="res_model">hr.competency.reviewer</field>
			<field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
             <field name="search_view_id" ref="hr_mirror.view_hr_competency_reviewer_filter" />
			<field name="view_id" eval="False"/>
			<field name="help" type="html">
				<p class="oe_view_noconten_create">
					 Kindly click to create a record
				</p>
			</field>
		</record>
        <menuitem id="view_hr_mirror_competency_reviewer_menu" name="Linking Reviewer" sequence="2" parent="hr_mirror.view_hr_mirror_competency_config_menu" action="hr_mirror.action_hr_competency_reviewer_id"/>

</odoo>