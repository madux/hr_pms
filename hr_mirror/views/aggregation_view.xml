<?xml version="1.0" encoding="utf-8"?>
    <odoo>
        <record id="view_employee_aggregation_filter" model="ir.ui.view">
			<field name="name">employee.aggregation</field>
			<field name="model">employee.aggregation</field>
			<field name="arch" type="xml">
				<search string="Search competency aggr">
                    <field name="employee_id"/> 
				</search>
			</field>
		</record>
   
        
		<record id="view_employee_aggregation_form" model="ir.ui.view">
			<field name="name">Competency form</field>
			<field name="model">employee.aggregation</field>
			<field name="arch" type="xml">
				<form string="HR Competency" create="1">
                    <header> 
                         
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" default_focus="1" required="1"/>
                            </h1>
                        </div> 
                        <group>
                            <group>
                                <field name="staff_id" invisible="0" readonly="1" force_save="1"/> 
                                <field name="employee_id" invisible="0" readonly="1" force_save="1"/> 
                                <field name="department_id" invisible="0" readonly="1" force_save="1"/> 
                            </group>
                            <group>
                                <field name="total" invisible="0" readonly="1" force_save="1"/> 
                            </group>
                        </group>
                        <notebook> 
                            <page name="hr_competency_ids" string="Ratings">
                                <field name="hr_competency_ids" readonly="1" string="Employee ratings">
                                    <tree string="" create="1">
                                        <field name="name" readonly="1" string="Name"/> 
                                        <field name="rated_by" readonly="0" string="Rated by"/>  
                                        <field name="employee_id" readonly="0" string="Employee"/> 
                                        <field name="competency_overall_total" readonly="1" string="Overall score"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
			</field>
		</record>

		<record id="view_employee_aggregation_tree" model="ir.ui.view">
			<field name="name">aggregation form</field>
			<field name="model">employee.aggregation</field>
			<field name="arch" type="xml">
				<tree string="" create="0">
                    <field name="name" readonly="1" string="Name"/> 
                    <field name="employee_id" readonly="0" string="Employee"/>  
                    <field name="total" readonly="1" string="State"/>   
                </tree>
			</field>
		</record>

		<record id="action_employee_aggregation_id" model="ir.actions.act_window">
			<field name="name">Aggregation</field>
			<field name="res_model">employee.aggregation</field>
			<field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
             <field name="search_view_id" ref="hr_mirror.view_employee_aggregation_filter" />
			<field name="view_id" eval="False"/>
			<field name="help" type="html">
				<p class="oe_view_noconten_create">
					 Kindly click to create a record
				</p>
			</field>
		</record>
        <menuitem id="view_employee_aggregation_menu" name="Aggregation" action="action_employee_aggregation_id" sequence="15" parent="hr_mirror.view_hr_mirror_competency_config_menu" groups="base.group_system,hr_pms.group_pms_officer_id,hr_pms.group_pms_manager_id"/>
</odoo>